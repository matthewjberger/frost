// Copy types work normally
x := 42;
y := x;
print(x);
print(y);

// Immutable borrowing
value := 100;
ref := &value;
print(ref^);

// Mutable borrowing (separate variable)
mut mval := 50;
mut_ref := &mut mval;
mut_ref^ = 200;
print(mval);

// Multiple immutable borrows are OK
a := 50;
r1 := &a;
r2 := &a;
print(r1^ + r2^);

// Struct field access doesn't move
Point :: struct { x: i64, y: i64 }
p := Point { x = 1, y = 2 };
print(p.x);
print(p.y);
print(p.x + p.y);
